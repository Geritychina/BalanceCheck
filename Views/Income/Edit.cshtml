@model BalanceCheck.Models.Income

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Income</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IncomeId" />
            <div class="form-group">
                <label asp-for="IncomeValue" class="control-label"></label>
                <input asp-for="IncomeValue" class="form-control" />
                <span asp-validation-for="IncomeValue" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsRepeated" /> @Html.DisplayNameFor(model => model.IsRepeated)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="IncomeDate" class="control-label"></label>
                <input asp-for="IncomeDate" class="form-control" />
                <span asp-validation-for="IncomeDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndIncomeDate" class="control-label"></label>
                <input asp-for="EndIncomeDate" class="form-control" />
                <span asp-validation-for="EndIncomeDate" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

